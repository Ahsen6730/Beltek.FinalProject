@model IEnumerable<Beltek.AhsenAslan.FinalProject.UI.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<h1>Ürün Listesi</h1>

<p >
    <a asp-action="Create" class="btn btn-success">Yeni Oluştur</a>
</p>
<table class="table table-responsive-lg table-responsive table-success">
    <thead>
        <tr class="bg-light">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th >
                @Html.DisplayNameFor(model => model.Detail)
            </th >
            <th>
                @Html.DisplayNameFor(model => model.CategoryId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="bg-light">
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Detail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success">Düzenle</a> |
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-success">Görüntüle</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-success">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>
